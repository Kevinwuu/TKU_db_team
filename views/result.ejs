<!DOCTYPE html>
<html>

<head>
    <% include header.ejs %>
        <style>
            .input-group label {
                font-size: 20px;
            }
        </style>
        <script>
            function displayGame() {
                var nSel = document.getElementById('gameList');
                var index = nSel.selectedIndex;
                var text = nSel.options[index].text; // 选中文本
                var value = nSel.options[index].value;
                document.getElementById("result-title").innerHTML = text + "報名結果";
            }

            function del() {
                confirm("確定刪除本筆資料嗎?");
            }

            function search() {

                var sID = document.getElementById('sID').value;
                alert(sID);
                window.location.href = "/result/search?name=" + sID;
            }
        </script>
</head>

<body>
    <% include navbar.ejs %>
        <div class="container">
            <div class="header mt-5 mb-2">
                <div class="row">
                    <div class="col-lg-4">
                        <h1 id="result-title">
                            報名結果
                        </h1>
                    </div>
                </div>
                <div class="row">
                    <div class="input-group search-area col-lg-4">
                        <label for="exampleFormControlSelect1">選擇比賽</label>
                        <select class="form-control" id="gameList" onchange="displayGame()">
                        <option>大資盃</option>
                        <option>小資盃</option>
                        <option>全國盃</option>
                        <option>資資盃</option>

                    </select>
                    </div>
                    <div class="input-group search-area col-lg-4">
                        <label for="exampleFormControlSelect2">隊伍名稱</label>
                        <input type="text" class="form-control" name="sid" id="sID" placeholder="">
                        <button class="btn btn btn-primary" onclick="search()">查詢</button>
                    </div>
                </div>
            </div>
            <div class="result-area">
                <table class="table table-hover">
                    <thead>
                        <tr class="table-success">
                            <th scope="col" class="align-middle">編號</th>
                            <th scope="col" class="align-middle">隊名</th>
                            <th scope="col" class="align-middle">人數</th>
                            <th scope="col" class="align-middle">報名狀泰</th>
                            <th scope="col" class="align-middle">繳費狀態</th>
                            <th scope="col" class="align-middle"></th>


                        </tr>
                    </thead>
                    <tbody>
                        <% for ( var i = 0 ; i < data.length ; i++){ %>
                            <tr>
                                <td class="align-middle">
                                    <%= data[i].t_id  %>
                                </td>
                                <td class="align-middle">
                                    <%= data[i].name  %>
                                </td>
                                <td class="align-middle">
                                    <%= data[i].number  %>
                                </td>
                                <td class="align-middle">
                                    <%= data[i].state  %>
                                </td>
                                <td class="align-middle">
                                    <%= data[i].pay  %>
                                </td>
                                <td class="align-middle">
                                    <button type="button" class="btn btn-outline-success btn-sm" data-toggle="modal" data-target="#exampleModal">Detail
                            </button>
                                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="del()">
                                Delete
                            </button>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>




        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
</body>


</html>